@model WebApplication4.Models.EmployeeModel

<h2>Create Employee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <!-- Country Dropdown -->
        <div class="form-group">
            @Html.LabelFor(model => model.FK_Country_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.FK_Country_Id, (SelectList)ViewBag.Country, "Select Country", new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>

        <!-- State Dropdown -->
        <div class="form-group">
            @Html.LabelFor(model => model.FK_State_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.FK_State_Id, (SelectList)ViewBag.State, "Select State", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
